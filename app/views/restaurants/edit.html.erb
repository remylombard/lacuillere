<%= form_for @restaurant do |f| %>

<%= f.label :name, "Enter name" %>
<%= f.text_field :name %>

<%= f.label :address, "Which address?" %>
<%= f.text_field :address %>

<%= f.label :phone_number, "Which phone number?" %>
<%= f.text_field :phone_number %>

<%= f.label :category, "Which category? " %>
<%= f.text_field :category %>
<%= f.submit "Send" %>

<% end %>
